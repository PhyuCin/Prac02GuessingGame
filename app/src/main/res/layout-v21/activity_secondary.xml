<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/defaultPadding"
            android:text="@string/min"
            android:textColor="@color/defaultFontColor"
            android:textColorLink="@color/defaultFontColor"
            android:textSize="@dimen/defaultFontSize" />

        <SeekBar
            android:id="@+id/simpleSeekBarMin"
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:background="#ebccff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:padding="@dimen/defaultPadding"
            android:text="@string/max"
            android:textColor="@color/defaultFontColor"
            android:textColorLink="@color/defaultFontColor"
            android:textSize="@dimen/defaultFontSize" />

        <SeekBar
            android:id="@+id/simpleSeekBarMax"
            android:layout_width="213dp"
            android:layout_height="match_parent"
            android:background="#ebccff" />

    </LinearLayout>

    <Button
        android:id="@+id/secondaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/defaultPadding"
        android:text="@string/secondaryButtonText"
        android:textSize="@dimen/buttonTextSize"
        android:backgroundTint="#9900cc"
        android:onClick="handler" />

</LinearLayout>